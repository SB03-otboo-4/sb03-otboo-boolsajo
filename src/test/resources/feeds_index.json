{
  "mappings": {
    "properties": {
      "id":        { "type": "keyword" },
      "createdAt": { "type": "date"    },
      "updatedAt": { "type": "date"    },
      "likeCount": { "type": "long"    },
      "content":   { "type": "text", "fields": { "ngram": { "type": "search_as_you_type" } } },
      "author": {
        "properties": {
          "userId": { "type": "keyword" },
          "name":   { "type": "text"    }
        }
      },
      "weather": {
        "properties": {
          "skyStatus": { "type": "keyword" },
          "precipitation": {
            "properties": {
              "type": { "type": "keyword" }
            }
          }
        }
      }
    }
  },
  "settings": { "number_of_shards": 1, "number_of_replicas": 0 }
}
